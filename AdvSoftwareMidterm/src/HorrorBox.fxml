<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="480.0" prefWidth="640.0" style="-fx-background-color: slategrey;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HorrorBoxController">
   <left>
      <VBox maxHeight="1.7976931348623157E308" spacing="8.0" BorderPane.alignment="CENTER">
         <children>
            <TitledPane prefHeight="195.0" prefWidth="128.0" text="Choose Your Path">
               <content>
                  <VBox spacing="8.0" style="-fx-background-color: darkred;">
                     <children>
                        <Button fx:id="leftPath" mnemonicParsing="false" onMouseClicked="#walkLeftButton" text="Walk Left" />
                        <Button fx:id="rightPath" mnemonicParsing="false" onMouseClicked="#walkRightButton" text="Walk Right" />
                        <Button fx:id="straightPath" mnemonicParsing="false" onMouseClicked="#walkStraightButton" text="Walk Straight" />
                        <Button fx:id="cry" mnemonicParsing="false" onMouseClicked="#cryButton" text="Cry" />
                        <Button fx:id="resetButton" mnemonicParsing="false" onMouseClicked="#resetButton" text="Reset" />
                     </children>
                  </VBox>
               </content>
            </TitledPane>
         </children>
         <BorderPane.margin>
            <Insets right="8.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
   <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Write your own path:" />
            <Button fx:id="chatGPTButton" alignment="BOTTOM_LEFT" mnemonicParsing="false" text="Continue" />
            <TextArea fx:id="userTxt" onMouseClicked="#selectUserTxt" prefHeight="114.0" prefWidth="593.0" />
         </children>
      </VBox>
   </bottom>
   <center>
      <ImageView fx:id="pathPhoto" fitHeight="285.0" fitWidth="466.0" onMouseClicked="#startGame" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="BOTTOM_CENTER">
         <image>
            <Image url="@Images/StartScreen.png" />
         </image>
      </ImageView>
   </center>
   <top>
      <Label fx:id="narrator" prefHeight="66.0" prefWidth="485.0" text="You're Lost? Make a choice, and hope for the best." BorderPane.alignment="TOP_RIGHT" />
   </top>
</BorderPane>
